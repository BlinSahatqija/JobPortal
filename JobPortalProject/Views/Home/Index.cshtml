@model JobPortalProject.Models.Home.IndexViewModel
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>JOB PORTAL</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- All Plugin Css -->
    <link rel="stylesheet" href="css/plugins.css">

    <!-- Style & Common Css -->
    <link rel="stylesheet" href="css/common.css">
    <link rel="stylesheet" href="css/main.css">
    <style>
        .counter {
            background: #1d7c99;
        }
    </style>
</head>

<body style="background-color:#eee6ff">
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <section class="main-banner" id="container" style="background: #12171c url(img/slider-03.jpg) no-repeat">
        <div class="container">
            <div class="caption">
                <h2>JOB PORTAL</h2>
            </div>
        </div>
    </section>

    <section class="jobs">
        <div class="container">
            <form>
                <fieldset>
                    <div class="col-md-10 col-sm-10 no-pad">
                        <input type="text" class="form-control" id="Name" asp-for="JobName" placeholder="Name">
                    </div>
                    <div class="col-md-2 col-sm-2 no-pad">
                        <button type="submit" class="btn btn-primary mb-2" style="background-color:#1d7c99">Search</button>
                    </div>
                </fieldset>
            </form>
            <div class="row heading">
                <h2>Punet ne dispozicion</h2>
            </div>
            <div class="companies">
                @foreach (var item in Model.Job.OrderBy(item => item.DateIn))
                {
    <div class="company-list">
        <div class="row">
            <div class="col-md-2 col-sm-2">
                <div class="company-logo">
                    <img src="img/job.png" class="img-responsive" alt="" />
                </div>
            </div>
            <div class="col-md-10 col-sm-10">
                <div class="company-content">
                    <h3>
                        @Html.DisplayFor(modelItem => item.JobName)<span class="btn btn-primary">
                            <a asp-action="Details" asp-route-id="@item.Id" style="color:aliceblue">Show More</a>
                        </span>
                    </h3>
                    <p>
                        <span class="company-name"><i class="fa fa-briefcase"></i>@Html.DisplayFor(modelItem => item.Category)</span>
                        <span class="company-location"><i class="fa fa-map-marker"></i>@Html.DisplayFor(modelItem => item.City)</span>
                        <span class="package">@Html.DisplayFor(modelItem => item.DateOut)</span>
                    </p>

                </div>
            </div>
        </div>
    </div>}
            </div>
        </div>
    </section>

